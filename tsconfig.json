{
  "compilerOptions": {
    "strict": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": { // this is enforced by babel.config.js
      "@lib/*": ["./src/lib/*"],
      "@features/*": ["./src/features/*"],
      "@config/*": ["./src/config/*"],
      "@components/*": ["./src/components/*"],
      "@customTypes/*": ["./src/customTypes/*"],
      "@styles/*": ["./src/styles"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "src",
  ],
  "exclude": [ "node_modules"]
}
